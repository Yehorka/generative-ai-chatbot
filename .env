# Django configuration
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=False
# Comma-separated hosts (no spaces) that are allowed to serve the app
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database path (mounted volume in docker-compose)
SQLITE_PATH=/data/db.sqlite3

# Static files configuration shared with nginx
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# LLM provider keys are managed in the database (Admin -> API Keys)
